generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  role          String @default("user")
  reputation    String?
  location      String?
  bio           String?
  username      String?
  website       String?
  active        DateTime?
  banner        String?
  recentTags    String[]
  dc_id         String?
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@unique([username])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Server {
  id         String   @id
  name       String
  owner_id   String
  is_config  Boolean  @default(false)
  config_id  String?
  logo       String?
  invite_url String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  @@unique([id])
  @@map("server")
}

model Configs {
  id                     String   @id @default(uuid())
  server_id              String   @unique
  qna_channel            String?
  qna_channel_webhook    String?
  qna_endpoint           String?
  mod_role               String?
  log_channel            String?
  log_channel_webhook    String?
  system_channel         String?
  system_channel_webhook String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @default(now())

  @@unique([id])
  @@map("configs")
}

model AnonProfile {
  id        String   @id
  name      String
  is_anon   Boolean  @default(false)
  pfp       String?  @default("https://avatar.vercel.sh/jill")
  uid       String?  @unique
  dc_uid    String?  @unique
  dc_name   String?
  dc_pfp    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([id])
  @@map("anonProfile")
}

model IndexedQns {
  id          String   @id @default(uuid())
  title       String
  ans_id      String?  @unique
  author      String
  content     String
  tldr        String?
  is_anon     Boolean  @default(false)
  is_nsfw     Boolean  @default(false)
  server_id   String
  thread_id   String
  thread_mems String[]
  tags        String[]
  msg_url     String
  up_votes    Int?     @default(0)
  down_votes  Int?     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  @@unique([id])
  @@map("indexedQns")
}

model IndexedAns {
  id         String   @id @default(uuid())
  author     String
  content    String
  qns_id     String
  tldr       String?
  server_id  String
  thread_id  String
  msg_url    String
  up_votes   Int?     @default(0)
  down_votes Int?     @default(0)
  is_correct Boolean  @default(false)
  is_anon    Boolean  @default(false)
  is_nsfw    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  @@unique([id])
  @@map("indexedAns")
}

model Tags {
  id        String   @id @default(uuid())
  name      String   @unique
  posts     String[]
  usages    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([id])
  @@map("tags")
}
