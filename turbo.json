{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"],
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_API_HOST", ".env*"]
    },
    "api:build": {
      "dependsOn": ["db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**"],
      "env": [".env*"]
    },
    "db:generate": {
      "inputs": ["packages/database/prisma/schema.prisma", ".env*"],
      "outputs": ["node_modules/.prisma/**"],
      "env": [".env*"],
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "db:push": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [".env*"]
    },
    "clean": {
      "cache": false
    }
  }
}